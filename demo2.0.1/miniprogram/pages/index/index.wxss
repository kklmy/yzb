/* 设置容器样式，确保按钮在容器内居中 */
.container {
  height: 200px;
}


.userinfo {
  position: absolute;

  top:50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 100%;
  height: 500rpx;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-bottom: 50px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 80%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

/**index.wxss**/
.main-container {
  margin-top: 100rpx;
  height: 100vh;
}

.list-item {
  height: 57px;
  position: relative;
  overflow: hidden;
}

.list-item-hover {
  background-color: #e5e4e9;
}

.list-item-img {
  position: absolute;
  width: 36px;
  height: 36px;
  left: 20px;
  top: 10px;
}  
   
.list-item-name {
  position: absolute;
  left: 76px;
  right: 50px;
  top: 0px;
  bottom: 0px;
  line-height: 56px;
  font-size: 22px;
  overflow: hidden;
  text-overflow: ellipsis;
}

.list-item-rssi-img {
  position: absolute;
  width: 20px;
  height: 20px;
  right: 20px;
  top: 13px;
}

.list-item-rssi {
  position: absolute;
  width: 40px;
  height: 20px;
  right: 10px;
  top: 30px;
  font-size: 12px;
  font-weight: bold;
  display: flex;
  justify-content: center;
}

.list-item-line {
  position: absolute;
  height: 1px;
  width: 100vw;
  left: 20px;
  top: 56px;
  background-color: #c6c6c8;
}

.notice {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
  font-size: 13px;
  color: #909399;
}

.gap {
  height: 57px;
}

