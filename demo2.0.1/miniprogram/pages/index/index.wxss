/* 设置容器样式，确保按钮在容器内居中 */
.container {
  height: 500px;
}


.userinfo {
  position: absolute;

  top:50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 100%;
  height: 500rpx;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-bottom: 50px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 80%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}


/* 设置按钮容器样式 */
.button-container {
  position: absolute;
  top: 600rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 20px; /* 按钮之间的间距 */

}
/* 设置按钮容器样式 */
.button-container1 {
  position: absolute;
  top: 750rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 20px; /* 按钮之间的间距 */

}
.connected-device {
  position: relative;
  top: 10rpx;
  width: auto;
  height: 100rpx;
  display: flex;
  flex-direction: column;
}

/* 自定义按钮样式 */
.custom-button {
  width: 200px; /* 按钮宽度 */
  height: 50px; /* 按钮高度 */
  background-color: #1aad19; /* 按钮背景颜色 */
  color: white; /* 按钮文字颜色 */
  border: none; /* 按钮无边框 */
  border-radius: 25px; /* 按钮圆角 */
  font-size: 16px; /* 按钮文字大小 */
  text-align: center; /* 按钮文字居中 */
  line-height: 50px; /* 按钮文字垂直居中 */
}

/* 在按钮被按下时的样式 */
.custom-button:active {
  background-color: #179b16; /* 按下时按钮背景颜色 */
}

/* 蓝牙设备列表容器样式 */
.device-list {
  margin-top: 20px;
  width: 100%;
  padding: 0 20px;
  box-sizing: border-box;
}

/* 蓝牙设备项样式 */
.device-item {
  background-color: #f5f5f5;
  padding: 10px;
  margin-bottom: 10px;
  border-radius: 5px;
  text-align: center;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

/* 模态框内容容器 */
.modal-content {
  background-color: white;
  width: 100%; /* 修改宽度 */
  max-width: 400px; /* 设置最大宽度 */
  height: 60%; /* 修改高度 */
  max-height: 600px; /* 设置最大高度 */
  padding: 20px;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.modal-header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-header text {
  font-size: 18px;
  font-weight: bold;
}

.modal-body {
  margin-top: 20px;
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

