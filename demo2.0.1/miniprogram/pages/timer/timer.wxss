}

input {
  width: 100%;
  padding: 8px;
  margin-top: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

button {
  width: 100%;
  padding: 10px;
  background-color: #1aad19;
  color: #fff;
  text-align: center;
  border-radius: 4px;
  margin-top: 20px;
}

.progress-canvas {
  width: 200px;
  height: 200px;
  margin: 20px auto;
}
