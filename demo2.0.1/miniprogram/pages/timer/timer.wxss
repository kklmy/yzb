.container {
  padding: 20px;
  text-align: center;
  margin-top: 30%;
}

.section {
  margin-bottom: 20px;
}
.section2 {
  margin-top: 10%;
  margin-bottom: 20px;
  margin-left: 5px;
}
.section3 {
  margin-top: 20%;
  margin-bottom: 20px;
